#include <bits/stdc++.h>
using namespace std;

int main(){
    int n;
    cin>>n;
    int a[n];
    for(int i = 0; i < n; i++){
        cin>>a[i];
    }
    int max = 0, count = 0, maximum = 0;
    sort(a, a+n);
    for(int i = 0; i < n; i++){
        count = 0;
        for(int j = i+1; j < n; j++){
            if(abs(a[i] - a[j]) <= 1){
                count++;
                if(count > maximum){
                    maximum = count;
                }
            }
            else{
                count = 0;
                break;
            }
        }
    }
    cout<<maximum+1;
}
